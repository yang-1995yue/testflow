# 应用配置
APP_NAME=TestFlow智能测试用例系统
APP_VERSION=1.0.0
DEBUG=true

# 数据库配置
DATABASE_URL=sqlite:///./autotestcase.db

# JWT认证配置
SECRET_KEY=your-super-secret-key-change-in-production-please
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=43200

# 文件上传配置
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=[".docx", ".pdf", ".xlsx", ".txt"]

# AI模型配置
DEFAULT_AI_PROVIDER=openai
DEFAULT_MODEL=gpt-3.5-turbo
AI_REQUEST_TIMEOUT=60
MAX_TOKENS=2000
TEMPERATURE=0.7

# CORS配置
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://127.0.0.1:3000", "http://127.0.0.1:8080"]

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=

# OpenAI API配置（示例）
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1

# Anthropic API配置（示例）
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_BASE_URL=https://api.anthropic.com

# 通义千问API配置（示例）
TONGYI_API_KEY=your-tongyi-api-key-here
TONGYI_BASE_URL=https://dashscope.aliyuncs.com/api/v1

# 本地模型配置（Ollama示例）
LOCAL_MODEL_BASE_URL=http://localhost:11434/v1
LOCAL_MODEL_NAME=llama2

# AI生成配置
# 是否使用真实AI（false时使用mock数据）
USE_REAL_AI=false
# AI重试次数
AI_MAX_RETRIES=3
# AI重试间隔（秒）
AI_RETRY_DELAY=2
